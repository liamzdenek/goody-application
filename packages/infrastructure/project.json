{
  "name": "infrastructure",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/infrastructure/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "packages/infrastructure"
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run synth",
        "cwd": "packages/infrastructure"
      },
      "dependsOn": [
        "build",
        {
          "projects": ["backend"],
          "target": "build"
        },
        {
          "projects": ["frontend"],
          "target": "build"
        }
      ]
    },
    "bootstrap": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk bootstrap --profile lz-demos",
        "cwd": "packages/infrastructure"
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk deploy --require-approval never --profile lz-demos",
        "cwd": "packages/infrastructure"
      },
      "dependsOn": [
        "build",
        {
          "projects": ["backend"],
          "target": "build"
        },
        {
          "projects": ["frontend"],
          "target": "build"
        }
      ]
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk destroy --force",
        "cwd": "packages/infrastructure"
      },
      "dependsOn": ["build"]
    }
  }
}
